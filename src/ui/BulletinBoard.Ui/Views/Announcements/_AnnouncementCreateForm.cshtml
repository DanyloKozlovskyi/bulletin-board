@model AnnouncementCreateModel
@{
    ViewBag.Title = "Create Announcement";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    @await Html.PartialAsync("_AnnouncementForm", new AnnouncementCreateModel())
    <div class="mt-3 text-end">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" id="createAnnouncementFormBtn" class="btn btn-primary" disabled>Create</button>
    </div>
</form>
