@model AnnouncementCreateModel

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-group mb-3">
    @Html.LabelFor(m => m.Title)
    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
</div>

<div class="form-group mb-3">
    @Html.LabelFor(m => m.Description)
    @Html.TextAreaFor(m => m.Description, 5, 0, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
</div>

<div class="form-group mb-3">
    <label class="form-label">Status</label>
    <div class="form-check form-check-inline">
        @Html.RadioButtonFor(m => m.Status, true, new { @class = "form-check-input", id = "StatusActive" })
        <label class="form-check-label" for="StatusActive">Active</label>
    </div>
    <div class="form-check form-check-inline">
        @Html.RadioButtonFor(m => m.Status, false, new { @class = "form-check-input", id = "StatusInactive" })
        <label class="form-check-label" for="StatusInactive">Inactive</label>
    </div>
    @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
</div>

<div class="form-group mb-3">
    @Html.LabelFor(m => m.CategoryId, "Category")
    @Html.DropDownListFor(
    m => m.CategoryId,
        (IEnumerable<SelectListItem>)ViewBag.FormCategories,
        "Select Category",
        new { @class = "form-control", id = "CategorySelect" })
    @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
</div>

<div class="form-group mb-3">
    @Html.LabelFor(m => m.SubCategoryId, "SubCategory")
    @Html.DropDownListFor(
        m => m.SubCategoryId,
        (IEnumerable<SelectListItem>)ViewBag.FormSubCategories,
        "Select SubCategory",
        new { @class = "form-control", id = "SubCategorySelect" })
    @Html.ValidationMessageFor(m => m.SubCategoryId, "", new { @class = "text-danger" })
</div>

