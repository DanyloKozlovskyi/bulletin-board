@model AnnouncementIndexViewModel

<form asp-action="Index"
      method="get"
      class="announcementsToolbar">
    <button type="button"
            class="btn btn-success btn-sm"
            data-bs-toggle="modal"
            data-bs-target="#createModal"
            data-url="@Url.Action("Create")">
        Create New Announcement
    </button>

    <div class="d-flex align-items-center">
        <label asp-for="CategoryId" class="form-label mb-0 me-2">Category</label>
        <select asp-for="CategoryId"
                asp-items="Model.Categories"
                asp-option-label="All Categories"
                class="form-select form-select-sm w-auto"
                onchange="this.form.submit()">
        </select>
    </div>

    <div class="d-flex align-items-center">
        <label asp-for="SubCategoryId" class="form-label mb-0 me-2">SubCategory</label>
        <select asp-for="SubCategoryId"
                asp-items="Model.SubCategories"
                asp-option-label="All SubCategories"
                class="form-select form-select-sm w-auto"
                onchange="this.form.submit()">
        </select>
    </div>
</form>

